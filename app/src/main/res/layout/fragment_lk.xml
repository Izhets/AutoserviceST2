<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_logged_nav_lk"
        android:background="@color/white"
        tools:context=".ui.lk.LkFragment">

    <TextView
            android:text="Имя"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:ems="10"
            android:id="@+id/userNameField"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Телефон"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:ems="10"
            android:id="@+id/phoneNumberField"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/userNameField"
            android:layout_marginTop="24dp"
            android:textStyle="italic"/>
    <TextView
            android:text="Почта"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:ems="10"
            android:id="@+id/emailField"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberField"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"
            android:textStyle="italic"/>
    <TextView
            android:text="Баланс"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:ems="10"
            android:id="@+id/depositField"
            app:layout_constraintTop_toBottomOf="@+id/emailField"
            app:layout_constraintVertical_bias="0.108"
            android:textStyle="bold|italic"/>

    <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            app:strokeColor="@color/purple_700"
            android:text="Пополнить"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/depositButton"
            app:layout_constraintVertical_bias="0.092"
            app:layout_constraintTop_toBottomOf="@+id/emailField"
            app:layout_constraintStart_toEndOf="@+id/depositField"
            app:layout_constraintHorizontal_bias="1.0"/>

    <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            app:strokeColor="@color/purple_700"
            android:text="Настройки аккаунта"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/accountSettingsButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/depositButton"
            app:layout_constraintVertical_bias="0.105" app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            app:strokeColor="@color/purple_700"
            android:text="Выйти"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:textAlignment="center"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/accountLogoutButton"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>