<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_add_application"
        android:background="@color/white"
        tools:context=".ui.application.AddApplicationFragment">

    <TextView
            android:text="Выберите авто:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:ems="10"
            android:id="@+id/autoSpinnerDescriptionAddApplication"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/autoSpinnerAddApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/autoSpinnerDescriptionAddApplication"/>
    <TextView
            android:text="Выберите категорию запчасти:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:ems="10"
            android:id="@+id/partCategorySpinnerDescriptionAddApplication"
            app:layout_constraintTop_toBottomOf="@+id/autoSpinnerAddApplication"
            android:layout_marginTop="24dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/partCategorySpinnerAddApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/partCategorySpinnerDescriptionAddApplication"/>
    <TextView
            android:text="Выберите запчасть:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:ems="10"
            android:id="@+id/partSpinnerDescriptionAddApplication"
            app:layout_constraintTop_toBottomOf="@+id/partCategorySpinnerAddApplication"
            android:layout_marginTop="24dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/partSpinnerAddApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/partSpinnerDescriptionAddApplication"/>
    <TextView
            android:text="Добавьте описание к заявке:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:ems="10"
            android:id="@+id/addDescriptionAddApplication"
            app:layout_constraintTop_toBottomOf="@+id/partSpinnerAddApplication"
            app:layout_constraintVertical_bias="0.108"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/descriptionAddApplication"
            android:hint="Напишите что-нибудь для мастера"
            app:layout_constraintTop_toBottomOf="@+id/addDescriptionAddApplication"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            app:strokeColor="@color/purple_700"
            app:icon="@drawable/ico_plus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/saveAddApplicationButton"
            app:layout_constraintTop_toBottomOf="@+id/descriptionAddApplication"
            app:layout_constraintVertical_bias="0.34"

            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>