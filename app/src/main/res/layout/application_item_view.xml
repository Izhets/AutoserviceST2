<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/nameApplicationItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Название"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:textSize="24sp"
            android:textIsSelectable="false"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/descriptionAddApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameApplicationItem"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>
    <TextView
            android:text="Категория запчасти"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/partCategoryApplication"
            app:layout_constraintTop_toBottomOf="@+id/descriptionAddApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>
    <TextView
            android:text="Запчасть"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/partApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/partCategoryApplication"
            android:textSize="16sp"/>
    <TextView
            android:text="Статус"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusApplication"
            app:layout_constraintTop_toBottomOf="@+id/partApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Счёт"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceApplication"
            app:layout_constraintTop_toBottomOf="@+id/statusApplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Оплатить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyApplicationButton"
            app:layout_constraintTop_toBottomOf="@+id/priceApplication"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Удалить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteApplicationButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buyApplicationButton"
            app:layout_constraintTop_toBottomOf="@+id/priceApplication"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.063"/>

</androidx.constraintlayout.widget.ConstraintLayout>